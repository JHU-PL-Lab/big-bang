                   Language.TinyBang.Utils.TemplateHaskell.TransformM,
                   Language.TinyBang.Utils.TemplateHaskell.Utils,
                   Language.TinyBang.Interpreter.WellFormedness,
                   Language.TinyBang.Syntax.Tokens,
                   Language.TinyBang.Syntax.Lexer,
                   Language.TinyBang.Syntax.Parser,
                   Language.TinyBang.Utils.Parser.PositionalParser,
                   Language.TinyBang.Utils.Parser.OriginParser,
                   Language.TinyBang.Utils.Logger.Operations,
                   Language.TinyBang.Ast.Origin,
                   Language.TinyBang.Utils.Parser.Parsec

executable tiny-bang
  hs-source-dirs:  interp-src
  main-is:         Main.hs
  build-depends:   
                   base >= 4,
                   tiny-bang,
                   containers,
                   mtl,
                   cmdargs,
                   parsec,
                   split,
                   wl-pprint,
                   errors,
                   hslogger,
                   bytestring,
                   aeson
  ghc-options:     -Wall

executable tests
  hs-source-dirs:  test-src
  main-is:         Main.hs
  build-depends:   base >= 4,
                   tiny-bang,
                   containers,
                   HUnit >= 1.2 && < 2,
                   QuickCheck >= 2.4,
                   test-framework >= 0.4.1,
                   test-framework-quickcheck2,
                   test-framework-hunit,
                   mtl,
                   filepath,
                   directory,
                   cmdargs,
                   parsec,
                   split,
                   wl-pprint,
                   errors,
                   hslogger,
                   bytestring,
                   aeson
  ghc-options:     -Wall
