                   base >= 4,
                   parsec,
                   transformers,
                   template-haskell,
                   containers,
                   either,
                   mtl,
                   cmdargs,
                   split,
                   wl-pprint,
                   errors,
                   hslogger,
                   deepseq,
                   bytestring,
                   aeson
  ghc-options:     -Wall
  exposed-modules: 
                   Language.TinyBang.Communicator,
                   Language.TinyBang.Ast,
                   Language.TinyBang.Syntax.Location,
                   Language.TinyBang.Interpreter,
                   Language.TinyBang.Ast.Data,
                   Language.TinyBang.Interpreter.Compatibility,
                   Language.TinyBang.Interpreter.Basis,
                   Language.TinyBang.Interpreter.Equality,
                   Utils.Monad,
                   Language.TinyBang.Display,
                   Data.Adj,
                   Language.TinyBang.Interpreter.DeepValues,
                   Language.TinyBang.TypeSystem.Types,
                   Language.TinyBang.TypeSystem.Contours,
                   Data.NFA,
                   Language.TinyBang.TypeSystem.Relations,
                   Language.TinyBang.TypeSystem.InitialDerivation,
                   Language.TinyBang.TypeSystem.Inconsistency,
                   Language.TinyBang.TypeSystem.Relations.Contours,
                   Language.TinyBang.TypeSystem.TypeInference,
                   Language.TinyBang.TypeSystem.Fibrations,
                   Language.TinyBang.TypeSystem.Relations.Projection,
                   Language.TinyBang.TypeSystem.Closure,
                   Language.TinyBang.TypeSystem.Constraints,
                   Language.TinyBang.TypeSystem.ConstraintHistory,
                   Language.TinyBang.TypeSystem.ConstraintDatabase.Simple,
                   Language.TinyBang.TypeSystem.Monad.Trans.Flow,
                   Language.TinyBang.TypeSystem.Monad.Trans.CReader,
                   Language.TinyBang.TypeSystem.Relations.Compatibility,
                   Language.TinyBang.TypeSystem.ConstraintDatabase,
                   Language.TinyBang.TypeSystem.Data.Compatibility,
                   Language.TinyBang.TypeSystem.Data,
                   Language.TinyBang.TypeSystem.Utils.DocumentContainer,
                   Language.TinyBang.TypeSystem.Relations.Contours.ContourInstantiable,
                   Language.TinyBang.TypeSystem.Relations.Contours.ContourExtractable,
                   Language.TinyBang.TypeSystem.Relations.Contours.ContourReplacable,
                   Language.TinyBang.TypeSystem.Relations.CellSubstitutable,
                   Language.TinyBang.Interpreter.Matching,
                   Language.TinyBang.Interpreter.Substitution,
                   Language.TinyBang.Interpreter.Variables,
                   Utils.Toploop,
                   Language.TinyBang.Toploop,
                   Utils.Toploop.Logging,
                   Language.TinyBang.TypeSystem.Data.Projection,
                   Language.TinyBang.Utils.TemplateHaskell.Deriving,
                   Language.TinyBang.Utils.TemplateHaskell.Reduce,
                   Language.TinyBang.Utils.TemplateHaskell.ReduceM,
